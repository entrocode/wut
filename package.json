{
  "name": "wut",
  "displayName": "wut",
  "description": "hopefully a vs code test coverage overlay tool",
  "version": "0.0.1",
  "publisher": "entrocode",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.checkFile",
    "onCommand:extension.runTests"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.checkFile",
        "title": "WUT: Check File"
      },
      {
        "command": "extension.runTests",
        "title": "WUT: Run Tests"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "wut configuration",
      "properties": {
        "wut.lcov": {
          "type": "string",
          "description": "Specifies the folder path containing lcov.info"
        },
        "wut.gruntTask": {
          "type": "string",
          "description": "Grunt Test Task"
        },
        "wut.runOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run on File Save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.5",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "lodash": "^4.12.0"
  }
}
